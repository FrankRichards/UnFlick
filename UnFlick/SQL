drop database FLICKRDB;
create database FLICKRDB;


CREATE TABLE config (
	key varchar primary key,
	value varchar
);

CREATE TABLE image (
	
	id int primary key,
	owner char(12),
	secret char(10),
	server int,
	farm int,
	title varchar(120),
	url_o varchar(120),
	height_o int,
	width_o int,
	date datetime,
	upload int,
	views int,
	description clob,
	image blob
);

CREATE TABLE sets (
	id int primary key,
	primary_pic int,
	secret char(12),
	server int,
	farm int,
	photos int,
	videos int,
	views int,
	comments int,
	date_created int,
	date_updated int

);

CREATE TABLE setpics (
	pic_id integer references images(id),
	set_id integer references set5s(id)
);
	

